<% @posts.each do |post| %>
  <div class="mt-3 mb-5 shadow rounded">
    <div class="card border-success">
      <h5 class="card-header bg-success text-white">
        <% if user_signed_in? %>
          <%= post.user.nick %>
        <% else %>
          <%= "Anonymous" %>
        <% end%>
      </h5>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
<% end %>
